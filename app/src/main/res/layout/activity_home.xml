<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_dynamic_neutral90"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBaseline_toBaselineOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="383dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="57dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text=" Never Miss your Medicine Again"
                android:textColor="@color/design_default_color_error"
                android:textSize="35sp"
                android:textStyle="bold" />
        </RelativeLayout>
        
        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardlabtest"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#5BC7D5"
                app:cardElevation="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="134dp"
                        android:layout_height="163dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/home" />

                    <TextView
                        android:layout_width="111dp"
                        android:layout_height="84dp"
                        android:layout_gravity="center_horizontal"
                        android:text="labtest"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_error"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardHealth"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#7AB8B2"
                app:cardElevation="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="128dp"
                        android:layout_height="148dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/care" />

                    <TextView
                        android:layout_width="113dp"
                        android:layout_height="71dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Health"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_error"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddMedicin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#78B7BF"
                app:cardElevation="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="159dp"
                        android:layout_height="142dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/pill" />

                    <TextView
                        android:layout_width="156dp"
                        android:layout_height="102dp"
                        android:layout_gravity="center_horizontal"
                        android:text="AddMedicin"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_error"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBuyMedicin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#71C3CD"
                app:cardElevation="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="182dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/buyy" />

                    <TextView
                        android:layout_width="194dp"
                        android:layout_height="87dp"
                        android:layout_gravity="center_horizontal"
                        android:text="BuyMedicin"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_error"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardScanner"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#87BAC1"
                app:cardElevation="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="138dp"
                        android:layout_height="144dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/scanner" />

                    <TextView
                        android:layout_width="169dp"
                        android:layout_height="89dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Scanner"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_error"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogOut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="fill"
                app:cardBackgroundColor="#54BFCD"
                app:cardElevation="20dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="151dp"
                        android:layout_height="136dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logout" />

                    <TextView
                        android:layout_width="143dp"
                        android:layout_height="101dp"
                        android:layout_gravity="center_horizontal"
                        android:text="LogOut"
                        android:textAlignment="center"
                        android:textColor="@color/design_default_color_error"
                        android:textSize="25dp"
                        android:textStyle="bold" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>






